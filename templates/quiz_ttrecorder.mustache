<div id="ttrec_container_{{uniqueid}}" class="mod_readaloud_ttrec_waveButtonContainer d-flex flex-column align-items-center" tabindex="0" >
    <canvas id="{{uniqueid}}_waveform" class="mod_readaloud_ttrec_waveForm"></canvas>

    <button id="{{uniqueid}}_recorderdiv" class="mod_readaloud_ttrec_waveButton ttrec_ready control control--recordbutton"
        type="button"
        data-passagehash="{{passagehash}}"
        data-waveheight="{{waveheight}}"
        data-region="{{region}}"
        data-lang="{{language}}"
        data-asrurl="{{{asrurl}}}"
        data-speechtoken="{{speechtoken}}"
        data-speechtokentype="{{speechtokentype}}"
        data-forcestreaming="{{forcestreaming}}"
        data-maxtime="{{{maxtime}}}"
        data-control="{{name}}"
        aria-label="{{label}}"
        aria-pressed="{{pressed}}"
        aria-describedby="recordbutton-desc">
        <span id="{{M_RECORD_BTN}}">
        {{> mod_readaloud/mic}}
        </span>
        <span id="{{M_STOP_BTN}}">
        {{> mod_readaloud/stop}}
        </span>
    </button>
    <span id="recordbutton-desc" class="control-label p-2">
        {{#str}} taptospeak, mod_readaloud {{/str}}
    </span>
</div>
